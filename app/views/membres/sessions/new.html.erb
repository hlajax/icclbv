<%=render 'menus/sticky' %>
<div class="container-fluid">
        <div class="row">
    <div class="col-lg-6 offset-lg-1 col-12 bloc-intro-1-form">
      <h2 class="text-center">Prêt à y retourner <br> aujourd'hui ?</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="form-group col-lg-12">
    <%= f.label :login %><br />
    <%= f.email_field :email, class:"form-control" %>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :mot_de_passe %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group col-lg-12">
      <%= f.check_box :remember_me %>
      <%= f.label :se_souvenir_de_moi %>
    </div>
  <% end %>

  <div class="form-group col-lg-12">
    <%= f.submit "Connexion", class:"btn btn-outline-danger" %>
  </div>
  <div class="form-group col-lg-12">
    <%= render "membres/shared/links" %>
  </div>
  </div>
<% end %>

</div>
<div class="col-lg-5 bloc-intro-1">
    </div>
  </div>
    
</div>
</div>