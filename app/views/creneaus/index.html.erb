<% set_meta_tags title: 'Créneaux de prières',
                 description: 'Page des créneaux de prières.',
                 keywords: 'ICC, Créneaux de prières, icc libreville' %>
<%=render 'menus/sticky' %>
<div class="container">
  <div class="row">
    <div class="col-lg-12 col-12">
      <p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <h5>Salut <%= current_membre.nom %> ! </h5>
        <h1>Tu as déjà <%= current_membre.creneaus.count %> créneaux</h1>
        <h5 class="card-title">Merci pour ton engagement</h5>
        <p class="card-text">
          N'hésite pas, fais-en encore plus !!!
        </p>
      </div>
    </div>
  </div>
</div>


    </div>
  </div>
  <div class="row row-cols-1 row-cols-md-4">
  <% @creneaus.each do |creneau| %>
  <div class="col mb-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <div class="row">
        <div class="col col-6 bg-success text-white h-100"><%=creneau.heure_debut.to_s(:time)  %></div>
        <div class="col col-6 bg-danger text-white h-100"><%=creneau.heure_fin.to_s(:time)%></div>
      </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>